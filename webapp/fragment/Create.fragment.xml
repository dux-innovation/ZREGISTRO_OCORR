<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:commons="sap.ui.commons" xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield">
	<Dialog>
		<customHeader>
			<Bar>
				<contentMiddle>
					<Title text="Criar Novo Registro"/>
				</contentMiddle>
			</Bar>
		</customHeader>
		<smartForm:SmartForm id="MainForm" entitySet="Ocorrencias" entityType="TY_OCORRENCIA" editable="true" expandable="false" expanded="true">
			<smartForm:Group>
				<smartForm:GroupElement>
					<smartField:SmartLabel labelFor="DtOcorre" />
					<smartField:SmartField value="{DtOcorre}" id="DtOcorre" />
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartField:SmartLabel labelFor="TmOcorre" />
					<smartField:SmartField value="{TmOcorre}" id="TmOcorre" />
				</smartForm:GroupElement>
				<smartForm:GroupElement>
				    <smartField:SmartLabel labelFor="IdLocali" />
					<smartField:SmartField value="{IdLocali}" id="IdLocali"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
				    <smartField:SmartLabel labelFor="DsLocali" />
					<smartField:SmartField value="{DsLocali}" id="DsLocali"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
				    <smartField:SmartLabel labelFor="DsOcorre" />
					<smartField:SmartField value="{DsOcorre}" id="DsOcorre"/>
				</smartForm:GroupElement>
			</smartForm:Group>
		</smartForm:SmartForm>
		<buttons>
			<Button text="{/actionText}" press="closeDialog"/>
			<Button text="{/submitText}" press="submitDialog"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>